{
  "name": "@yabetoo/cli",
  "version": "0.2.0",
  "description": "Yabetoo CLI for local development and webhook testing",
  "type": "module",
  "license": "MIT",
  "bin": {
    "yabetoo": "./dist/yabetoo.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "start": "node dist/yabetoo.js",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "release:major": "./scripts/release.sh major",
    "release:minor": "./scripts/release.sh minor",
    "release:patch": "./scripts/release.sh patch",
    "prepare": "husky"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "eventsource": "^3.0.5"
  },
  "devDependencies": {
    "@types/eventsource": "^1.1.15",
    "@types/node": "^22.15.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "tsup": "^8.4.0",
    "typescript": "^5.8.0",
    "vitest": "^4.0.18"
  },
  "lint-staged": {
    "src/**/*.ts": "eslint"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
